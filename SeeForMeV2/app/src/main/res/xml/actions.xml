<?xml version="1.0" encoding="utf-8"?>
<actions>
    <!--
        App Action for opening a specific feature of the SeeForMe app.
        When a user says “Open SeeForMe” or a similar command, this action will trigger.
    -->
    <action intentName="actions.intent.OPEN_APP_FEATURE">
        <!--
            The fulfillment element specifies how your app is launched.
            Update the urlTemplate to match your app’s deep link.
            For example, ensure that you have an intent filter in your manifest to handle the “seeforme://open” URI.
        -->
        <fulfillment urlTemplate="seeforme://open" />
    </action>
</actions>
